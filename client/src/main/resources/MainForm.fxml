<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.isakov.client.controller.ClientController">
    <HBox prefHeight="0.0" prefWidth="496.0">
        <children>
            <MenuBar>
                <Menu text="Menu">
                    <Menu text="Приостановить синхронизацию">
                        <items>
                            <MenuItem fx:id="stopSyncing15" onAction="#stopSyncing" text="на 15 минут" />
                            <MenuItem fx:id="stopSyncing60" onAction="#stopSyncing" text="на 1 час" />
                            <MenuItem fx:id="stopSyncing" onAction="#stopSyncing" text="до включения вручную" />
                        </items>
                    </Menu>
                    <MenuItem onAction="#startSyncing" text="Возобновить синхронизацию" />
                    <MenuItem onAction="#openSyncLog" text="Лог синхронизации" />
                    <SeparatorMenuItem />
                    <Menu text="Создать">
                        <items>
                            <MenuItem onAction="#newFolderRemote" text="Новая папка" />
                            <MenuItem onAction="#newFileRemote" text="Новый файл (txt)" />
                            <SeparatorMenuItem />
                            <MenuItem onAction="#newFileRemote" text="Новая папка локально" />
                        </items>
                    </Menu>
                    <SeparatorMenuItem />
                    <MenuItem onAction="#openInBrowser" text="Открыть в браузере" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#signOut" text="Sign out" />
                    <MenuItem onAction="#exit" text="Exit" />
                </Menu>
                <Menu text="About">
                    <MenuItem onAction="#openUrl" text="О программе" />
                </Menu>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
            </MenuBar>
            <Region HBox.hgrow="ALWAYS" />
            <TextField>
                <HBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </HBox.margin>
            </TextField>
        </children>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <ListView fx:id="clientListView" onMouseClicked="#mouseHandler" VBox.vgrow="ALWAYS" />
            <HBox>
                <Button onAction="#sendFile" text="Отправить" HBox.hgrow="ALWAYS" />
                <Region maxWidth="10.0" minWidth="5.0" prefWidth="10.0" HBox.hgrow="ALWAYS" />
                <Button onAction="#deleteFileClient" text="Удалить" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS" />
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
        </VBox>

        <VBox HBox.hgrow="ALWAYS">
            <ListView fx:id="serverListView" VBox.vgrow="ALWAYS" />
            <HBox>
                <Button onAction="#downloadFile" text="Получить" HBox.hgrow="ALWAYS" />
                <Region minWidth="5.0" prefWidth="10.0" />
                <Button onAction="#deleteFileServer" text="Удалить" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS" />
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
        </VBox>

    </HBox>
</VBox>
